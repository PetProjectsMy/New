{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "paths": {
      "@/*": ["./src/*"],
      "@-utils/*": ["./src/shared/utils/*"]
    },
    "strict": true,
    "target": "es5",
    "typeRoots": ["./node_modules/@types/", "./utilTypes", "src/app/types"]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
